@model IEnumerable<Actor>

@{
    ViewData["Title"] = "Lista de Actores";
}
<div class="row justify-content-center">
    <div class="col-md-10">
        <table class="table table-striped">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="width: 150px; height: 150px; object-fit: cover;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle text-center">
                            <a class="btn btn-outline-primary mx-1 my-1" style="width: 7rem" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square me-1"></i>Editar
                            </a>
                            <a class="btn btn-outline-info mx-1 my-1" style="width: 7rem" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye me-1"></i>Ver
                            </a>
                            <a class="btn btn-danger mx-1 my-1" style="width: 7rem" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash me-1"></i>Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position: fixed; right: 25px; bottom:25px;">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Agregar Nuevo
    </a>
</div>