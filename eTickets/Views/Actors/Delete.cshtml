@model Actor

@{
    ViewData["Title"] = "Eliminar Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h2 class="text-center mb-4">¿Estás seguro de eliminar a @Model.FullName?</h2>
        <div class="row">
            <div class="col-md-8 offset-2">

                    <div class="text-center py-1">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                    </div>
                    <div class="py-1">
                        <label asp-for="ProfilePictureURL" class="form-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" readonly/>
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="py-1">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="py-1">
                        <label asp-for="Bio" class="form-label"></label>
                        <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="py-4 d-flex justify-content-center gap-2">
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirmar" class="btn btn-danger" />
                        </form>
                    </div>
           
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var url = $("#ProfilePictureURL").val();

            if (url) {
                output.src = url;
                $('#ProfilePicturePreview').show();
            } else {
                $('#ProfilePicturePreview').hide();
            }
        })
    </script>
}